apiVersion: apps/v1
kind: Deployment
metadata:
  name: flask-app-deployment
  labels:
    app: flask
spec:
  replicas: 3
  selector:
    matchLabels:
      name: flask-app-pod
      app: flask
  template:
    metadata:
      name: flask-app-pod
      labels:
        name: flask-app-pod
        app: flask
    spec:
      containers:
        - name: flask-app
          image: zgchuck/flask_app:latest
          ports:
            - containerPort: 80

apiVersion: v1
kind: Service
metadata:
  name: flask-app-service
  labels:
    name: flask-app-service
    app: flask
spec:
  type: LoadBalancer
  ports:
    - port: 80
      targetPort: 5002
  selector:
    name: flask-app-pod
    app: flask
apiVersion: apps/v1
kind: Deployment
metadata:
  name: flask-mysql-deployment
  labels:
    app: flask
spec:
  replicas: 1
  selector:
    matchLabels:
      name: flask-mysql-pod
      app: flask
  template:
    metadata:
      name: flask-mysql-pod
      labels:
        name: flask-mysql-pod
        app: flask
    spec:
      containers:
        - name: flask-mysql
          image: zgchuck/flask_mysql:latest
          ports:
            - containerPort: 3306

apiVersion: v1
kind: Service
metadata:
  name: flask-mysql-service
  labels:
    name: flask-mysql-service
    app: flask
spec:
  type: ClusterIP
  ports:
    - port: 3306
      targetPort: 3306
  selector:
    name: flask-mysql-pod
    app: flask
